
<div class="relative z-20 second-menu-row make-stick-top" data-sticky-class="is-sticky">
  <div
    class="flex items-center justify-between px-4 py-5 mx-auto second-menu-wrapper sm:px-6 sm:py-4 md:justify-start "
  >
    <div class="-my-2 -mr-2 lg:hidden">
      <button
        type="button"
        class="inline-flex items-center justify-center p-2 text-gray-400 bg-white rounded-md hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
        aria-expanded="false"
      >
        <span class="sr-only">Open menu</span>
        <!-- Heroicon name: outline/menu -->
        <svg
          class="w-6 h-6"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
    </div>

    <div class="hidden lg:flex-1 lg:flex lg:items-center md:justify-between">
      <nav class="flex space-x-10 second-row-navigation">
        {% assign index= 0 %} {% for link in
        linklists['main-menu-right-may'].links %} {% assign deepmenu=
        linklists[link.handle] %} {% assign deepmenusize= deepmenu.links |
        size%} {% assign Mtitle= link.title | downcase %}
        <div class="single-menu-item ">
          <button
            type="button"
            onclick="MenuEvent('MAINMENU','','BIONIC SILK NEW','https://www.moxielash.com/collections/bionic-silk')"
            class="single-menu-link multi-menu"
            aria-expanded="false"
          >
            <span class="flex items-center">{{ link.title }}</span>
            <!--
                  Heroicon name: solid/chevron-down
  
                  Item active: "text-gray-600", Item inactive: "text-gray-400"
                -->

            {% if Mtitle contains 'shop' or Mtitle contains 'about' or Mtitle
            contains 'collections' %} {% render 'icon-down-arrow-chevron' %} {%
            endif %}
          </button>
          <!-- loading megamenu -->
          {% if Mtitle contains 'shop' or Mtitle contains 'about' or Mtitle
          contains 'collections' %}  
          {% assign menuHandle= Mtitle | handleize |
          prepend :'mega-menu-' %}
          <!-- mega-menu-{{menuHandle}} -->
          {% capture menu %}
          {% include menuHandle %} 
          {% endcapture %}
          {% unless menu contains 'Liquid error' %}
            {{menu}}
          {% endunless %} 
          {% endif %}
        </div>   
        {% endfor %}
      </nav>
      <div class="flex items-center md:ml-12">
         
{% include 'icons-right-menu' %}
        
      </div>
    </div>
  </div>
</div> 
