{% include 'moxie-header' %}
{% schema %} 
{
  "name": "Header",
  "settings": [{
          "type": "header",
          "content": "Announcement Bar"
      },
      { 
          "type": "checkbox",
          "id": "announcement_bar_enabled",
          "label": "Show Announcement",
          "default": true
      },
      {
          "type": "text",
          "id": "announcement_bar_text",
          "label": "Announcement Text",
          "default": "Webpack is awesome!"
      },
      {
          "type": "color",
          "id": "announcement_bar_bg",
          "label": "Background Color",
          "default": "#000000"
      },
      {
          "type": "color",
          "id": "announcement_bar_text_color",
          "label": "Annoucement Text Color",
          "default": "#FFFFFF"
      },
      {
          "type": "url",
          "id": "announcement_bar_link",
          "label": "Announcement Link",
          "info": "Optional"
      },
      {
          "type": "header",
          "content": "Navbar"
      },
      {
          "type": "color",
          "id": "nav_bar_bg",
          "label": "Navbar Background Color",
          "default": "#FFFFFF"
      },
      {
          "type": "color",
          "id": "nav_bar_text_color",
          "label": "Navbar Text Color",
          "default": "#000000"
      },
      {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo Image"
      },
      {
          "type": "range",
          "id": "logo_max_width",
          "min": 20,
          "max": 420,
          "step": 10,
          "unit": "px",
          "label": "Logo Width",
          "default": 60
      },
      {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "main-menu"
      }
  ]
}
{% endschema %}

{%- if section.settings.announcement_bar_enabled -%}
<style>
  .announcement-bar-container {
    background: {{ section.settings.announcement_bar_bg}};
    color: {{section.settings.announcement_bar_text_color}};
  }

  .nav-bar-container {
    background: {{ section.settings.nav_bar_bg}};
    color: {{section.settings.nav_bar_text_color}};
  }

  .logo-image {
    display: block;
    max-width: {{section.settings.logo_max_width}}px;
  }
</style>
{%- endif -%}
